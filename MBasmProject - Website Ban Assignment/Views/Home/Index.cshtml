<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center justify-content-center">
    <div class="container" @*data-aos="fade-up"*@>

        <div class="row justify-content-center" @*data-aos="fade-up" data-aos-delay="150"*@>
            <div class="col-xl-6 col-lg-8">
                <h1>Powerful Academic Solutions With MB</h1>
                <h2 style="color: #ffc451; font-style: italic;">Your Path to Academic Excellence Starts Here!</h2>
            </div>
        </div>

        <div class="row gy-4 mt-5 justify-content-center" @*data-aos="zoom-in" data-aos-delay="250"*@>
            <div class="runningTitle-container">
                <h2>I make sure my assignments are <span class="auto-type"></span></h2>
            </div>
            <button class="btn-hover">
                Scroll to find out more!
            </button>
